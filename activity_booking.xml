<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Booking">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar2"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/LoginTheme2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medicine_booking"
            android:textColor="@color/Tab_Name"
            android:textSize="25sp"/>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/visible_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medicine_type"
        android:textSize="20sp"
        android:layout_below="@id/toolbar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/med_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/medicine_comes_here"
        android:layout_below="@id/visible_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"/>
    <Button
        android:id="@+id/order_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:layout_below="@id/med_tv1"
        android:layout_centerHorizontal="true"
        android:text="@string/order"
        android:layout_marginTop="80sp"/>

</RelativeLayout>