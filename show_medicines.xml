<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme"
    android:background="@drawable/listview_shape1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medicine"
        android:id="@+id/show_t1"
        android:textColor="@color/Tab_Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="35sp"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/show_med_t1"
        android:layout_below="@id/show_t1"
        android:layout_marginStart="35sp"
        android:layout_marginEnd="35sp"
        android:textColor="@color/Tab_Name"
        android:textSize="25sp"
        android:text="@string/medicine_name_comes_here"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description1"
        android:id="@+id/show_t2"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/show_med_t1"
        android:textStyle="bold"
        android:textColor="@color/Tab_Name"
        android:layout_marginStart="35sp"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/show_med_t2"
        android:layout_below="@id/show_t2"
        android:layout_marginStart="35sp"
        android:textColor="@color/Tab_Name"
        android:layout_marginEnd="35sp"
        android:textSize="25sp"
        android:text="@string/medicine_description_here"/>
    <Button
        android:id="@+id/showmed_bt"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape1"
        android:layout_toRightOf="@id/show_med_t1"
        android:layout_marginEnd="20sp"
        android:textStyle="bold"
        android:text="@string/add"
        android:textColor="@color/Tab_Name"
        android:layout_centerVertical="true"
        />

</RelativeLayout>