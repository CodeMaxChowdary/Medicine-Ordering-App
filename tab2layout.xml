<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_shape1">
    <ImageView
        android:id="@+id/tab2_iv"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:src="@drawable/welcome2"
        android:layout_marginStart="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="20sp"/>
    <TextView
        android:id="@+id/tab2_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab2_iv"
        android:text="Medicine name"
        android:layout_marginStart="20sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tab2_t2"
        android:text="Medications"
        android:layout_toRightOf="@id/tab2_iv"
        android:layout_marginTop="25sp"
        android:textSize="18sp"
        android:textColor="@color/Tab_Name"
        android:textStyle="bold"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="20sp"/>

</RelativeLayout>