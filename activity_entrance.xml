<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome1"
    tools:context=".Entrance">
    <ImageView
        android:layout_width="140sp"
        android:layout_height="140sp"
        android:src="@drawable/welcome2"
        android:id="@+id/xn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80sp"/>
    <Button
        android:id="@+id/welcome_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350sp"
        android:background="@drawable/buttonshape"
        />
    <Button
        android:id="@+id/welcome_bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/welcome_bt1"
        android:layout_marginTop="20sp"
        />

</RelativeLayout>