<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Register">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/icon_reg_id"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_marginTop="40sp"
    android:src="@drawable/register_icon"
    android:layout_centerHorizontal="true"
    />
    <TextView
        android:id="@+id/user_reg_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_below="@id/icon_reg_id"
        android:layout_marginTop="40sp"
        android:layout_marginStart="40sp"/>
    <EditText
        android:id="@+id/user_et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_reg_t1"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:hint="@string/enter_username"
        tools:ignore="Autofill"/>
    <TextView
        android:id="@+id/pass_reg_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password1"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_below="@id/user_et_id"
        android:layout_marginTop="10sp"
        android:layout_marginStart="40sp"/>
    <EditText
        android:id="@+id/pass_et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass_reg_t1"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:inputType="textPassword"
        android:hint="@string/enter_password"
        tools:ignore="Autofill" />
    <EditText
        android:id="@+id/cpass_et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/pass_et_id"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:hint="@string/confirm_password"
        tools:ignore="Autofill"/>
    <TextView
        android:id="@+id/telephone_reg_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telephone"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_below="@id/cpass_et_id"
        android:layout_marginTop="10sp"
        android:layout_marginStart="40sp"/>
    <EditText
        android:id="@+id/tel_reg_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/telephone_reg_id"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:hint="@string/enter_mobile_number"
        android:inputType="number"
        tools:ignore="Autofill"/>
    <TextView
        android:id="@+id/mail_reg_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mail"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_below="@id/tel_reg_et"
        android:layout_marginTop="10sp"
        android:layout_marginStart="40sp"/>
    <EditText
        android:id="@+id/mail_reg_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail_reg_id"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:hint="@string/enter_mail"
        tools:ignore="Autofill" />
    <Button
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginTop="20sp"
        android:id="@+id/reg_bt"
        android:layout_below="@id/mail_reg_et"
        android:background="@drawable/buttonshape"
        android:text="@string/register"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/call_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_login_here"
        android:layout_below="@id/reg_bt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColorLink="@color/colorPrimary"
        android:typeface="serif"
        />
</RelativeLayout>
</ScrollView>