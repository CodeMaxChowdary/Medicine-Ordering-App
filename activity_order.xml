<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Order">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Order">
    <TextView
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/order_et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/please_enter_name"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"/>
    <TextView
        android:text="@string/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/order_et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_city"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"/>
    <TextView
        android:text="@string/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/order_et3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_address_of_delivery"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"/>
    <TextView
        android:text="@string/gmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/order_et4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_gmail"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"/>

    <Button
        android:id="@+id/book_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center"
        android:text="@string/book"
        android:layout_marginTop="100sp"/>
</LinearLayout>
</ScrollView>